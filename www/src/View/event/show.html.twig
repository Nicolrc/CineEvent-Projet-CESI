{% extends "base.html.twig" %}
{% block title %} Vue d'un événement {% endblock %}

{% block css %}
    <link rel="stylesheet" href="/assets/css/style_event_add.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
{% endblock %}

{% block body %}
    <div class="card-container">
        <div class="card card-show">
            <h1>{{event.nom}}</h1>
            <div class="mb-3 card-image overflow-hidden p-0">
                {% if event.imageFileName %}
                    <div class="w-100">
                        <img src="/uploads/images/{{ event.imageRepository }}/{{ event.imageFileName }}" class="img-fluid w-100">
                    </div>
                {% endif %}
            </div>
            <div class="mb-3 card-image">
                <h3>Quel est cet événement ?</h3>
                <p>{{ event.description }}</p>
            </div>

            <div class="row mb-3 gap-2">
                <div class="col card-info">
                    <p>Date de l'événement</p>
                    <h3>{{ event.dateEvenement|date('Y-m-d') }}</h3>
                </div>
                <div class="col card-info">
                    <p>Prix l'événement</p>
                    <h3>{{ event.prix }}€</h3>
                </div>
            </div>

            <div class="card-image mb-3">
                <div class="card-body">
                    <h2>On se déroule l'événement ?</h2>
                    <div id="map"></div>
                </div>
            </div>

            <div class="row mb-3 gap-2">
                <div class="col card-info">
                    <p>Nom de la personne à contacter</p>
                    <h3>{{ event.contactNom }}</h3>
                </div>
                <div class="col card-info">
                    <p>Mail de la personne à contacter</p>
                    <h3>{{ event.contactEmail }}</h3>
                </div>
            </div>
            <a href="/event/pdf/{{ event.id }}">
                <input type="button" class="btn btn-valider" value="Téléchargez un pdf de l'événement">
            </a>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script type="text/javascript" src="/assets/js/script_article_add.js"></script>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
    // On récupère les coordonnées PHP via Twig
    const lat = {{ event.latitude }};
    const lng = {{ event.longitude }};
    const eventName = "{{ event.nom|e('js') }}";

    // Initialisation de la carte centrée sur l'événement
    const map = L.map('map').setView([lat, lng], 15);

    // Ajout du fond de carte OpenStreetMap
    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);

    // Ajout d'un marqueur (le "pin") sur les coordonnées
    L.marker([lat, lng]).addTo(map)
        .bindPopup(eventName) // Affiche le nom au clic
        .openPopup();
</script>
{% endblock %}